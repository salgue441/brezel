root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,cc,cpp,cxx,c++,h,hpp,hh,h++}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.{cmake,CMakeLists.txt}]
indent_style = space
indent_size = 2

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 80

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{sh,bash}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.lua]
indent_style = space
indent_size = 2